meta(http-equiv="X-UA-Compatible", content="IE=edge")
meta(name="viewport", content="width=device-width,initial-scale=1")
title KGL
link(rel="stylesheet", href="/bootstrap-5.1.3-dist/css/bootstrap.css")
nav.navbar.navbar-dark.navbar-expand-lg.bg-dark
  .container
    a.navbar-brand(href="/html/index.html") KARIBU GROCERIES
.container.card.bg-dark(style="width: 40%; margin-top: 2%; height: 850px; align-items: stretch")
  .card-body
    .mb-2
      label.form-label(style="color: #fff") Name of Buyer
      input.form-control#nameOfBuyer(type="string", placeholder="Name of Buyer", required)
    .mb-2
      label.form-label(style="color: #fff") National ID
      input.form-control#nationalId(type="number", placeholder="NIN", required, style="width: 30%")
    .mb-2
      label.form-label(style="color: #fff") Location
      input.form-control#location(type="string", placeholder="Location", required)
    .mb-2
      label.form-label(style="color: #fff") Phone Number
      input.form-control#phoneNumber(type="number", placeholder="Phone Number", required, style="width: 30%")
    .mb-2
      label.form-label(style="color: #fff") Amount Due
      input.form-control#amountDue(type="number", placeholder="UGX", required, style="width: 30%")
    .mb-2
      label.form-label(style="color: #fff") Sales agent
      input.form-control#agentName(type="string", placeholder="Sales agent", required)
    .mb-2
      label.form-label(style="color: #fff") Due Date
      input.form-control#dueDate(type="date", placeholder="Due Date", required, style="width: 20%")
    .mb-2
      label.form-label(style="color: #fff") Type Of Produce
      input.form-control#typeOfProduce(type="string", placeholder="Type Of Produce", required)
    .mb-2
      label.form-label(style="color: #fff") Tonnage
      input.form-control#tonnage(type="number", placeholder="Tonnage", required, style="width: 30%")
    .mb-2
      label.form-label(style="color: #fff") Date Of Dispach
      input.form-control#dateOfdispach(type="date", placeholder="Date Of Dispach", required, style="width: 20%")
    a.btn.btn-primary(href="/KGL/index.html") Submit
script(src="/bootstrap-5.1.3-dist/js/bootstrap.bundle.js")