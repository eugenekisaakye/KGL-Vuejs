meta(charset="UTF-8")
meta(http-equiv="X-UA-Compatible", content="IE=edge")
meta(name="viewport", content="width=device-width,initial-scale=1")
title KGL
link(rel="stylesheet", href="/bootstrap-5.1.3-dist/css/bootstrap.css")
nav.navbar.navbar-dark.navbar-expand-lg.bg-dark
  .container
    a.navbar-brand(href="/html/index.html") KARIBU GROCERIES
.container.card.bg-dark(style="width: 40%; margin-top: 5%; height: 650px; align-items: stretch")
  .card-body
    .mb-2
      label.form-label(style="color: #fff") Name of Produce
      input.form-control#nameOfProduce(type="string", placeholder="Name of Produce", required)
    .mb-2
      label.form-label(style="color: #fff") Tonnage
      input.form-control#tonnage(type="number", placeholder="Tonnage", required, style="width: 30%")
    .mb-2
      label.form-label(style="color: #fff") Cost
      input.form-control#cost(type="number", placeholder="UGX", required, style="width: 30%")
    .mb-2
      label.form-label(style="color: #fff") Name of Buyer
      input.form-control#nameOfBuyer(type="string", placeholder="Name of Buyer", required)
    .mb-2
      label.form-label(style="color: #fff") Sales agent
      input.form-control#agentName(type="string", placeholder="Sales agent", required)
    .mb-2
      label.form-label(style="color: #fff") Date
      input.form-control#date(type="date", placeholder="Date", required, style="width: 20%")
    .mb-2
      label.form-label(style="color: #fff") Time
      input.form-control#time(type="time", placeholder="Time", required, style="width: 20%")
    a.btn.btn-primary(href="/KGL/index.html") Submit
script(src="/bootstrap-5.1.3-dist/js/bootstrap.bundle.js")